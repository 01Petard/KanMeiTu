<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp">

   <Button
       android:id="@+id/btn_textview"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="TextView"/>
   <Button
       android:id="@+id/btn_button"
       android:text="button"
       android:background="@drawable/bg_btn"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
   <Button
       android:id="@+id/btn_button2"
       android:text="button"
       android:background="@drawable/bg_btn2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"/>
   <Button
       android:id="@+id/btn_button3"
       android:text="Toast语句"
       android:background="@drawable/bg_btn3"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:onClick="showToast"
       android:textAllCaps="false"
       android:layout_marginTop="10dp"/>
   <Button
       android:id="@+id/btn_edittext"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:background="#ff0000"
       android:layout_marginTop="10dp"
       android:textAllCaps="false"
       android:text="EditText"
       android:gravity="center"/>
   <Button
       android:id="@+id/btn_radiobutton"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:background="#ff0000"
       android:layout_marginTop="10dp"
       android:textAllCaps="false"
       android:text="RadioButton"
       android:gravity="center"/>
   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/btn_checkbox"
       android:text="CheckBox"
       android:textAllCaps="false"/>
   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/btn_imageview"
       android:text="ImageView"
       android:textAllCaps="false"/>
   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/btn_listview"
       android:text="ListView"
       android:textAllCaps="false"/>
   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/btn_gridview"
       android:text="Gridview"
       android:textAllCaps="false"/>


</LinearLayout>